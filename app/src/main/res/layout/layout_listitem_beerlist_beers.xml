<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item_layout"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_content"
        >

        <ImageView
            android:id="@+id/beer_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/beer_image"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/beer_name"
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="16dp"
            android:text="Nafn" />

        <TextView
            android:id="@+id/beer_volume"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:text="Magn" />

        <TextView
            android:id="@+id/beer_price"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="60dp"
            android:text="VerÃ°" />

        <TextView
            android:id="@+id/beer_alcohol"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="60dp"
            android:text="Alcohol" />


    </RelativeLayout>

        <ImageView
            android:id="@+id/drunkBeer"
            android:layout_marginHorizontal="345dp"
            android:layout_marginTop="5dp"
            android:layout_width="65dp"
            android:layout_height="67dp"
            app:srcCompat="@drawable/full_beer" />





</RelativeLayout>

