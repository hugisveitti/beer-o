<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/userpageGreeting"
        android:layout_width="245dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:text="Hello user"
        android:textSize="24sp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="108dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="22dp"
        android:text="Log out" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mybeersList"
        android:layout_width="347dp"
        android:layout_height="217dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="400dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mybeerlistsList"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/myBeerlistsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="360dp"
        android:text="These are your beers:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/mybeersMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="100dp"
        android:text="These are your beerlists:"
        android:textSize="20dp" />
</RelativeLayout>